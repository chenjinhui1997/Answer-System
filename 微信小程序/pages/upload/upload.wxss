page {
  height: 100%;
  background: linear-gradient(#52dbf3,rgb(150, 243, 212),#FFFFFF);
}

.page {
  height: 900rpx;
  margin: 15rpx 15rpx 70rpx 15rpx;
  position: relative;
  z-index: 2;
}
.question{
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-top: 20px;
  padding-bottom: 10px;
  width: 90%;
}
.answer{
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-top: 20px;
  padding-bottom: 10px;
  width: 90%;
}
.content{
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-top: 20px;
  padding-bottom: 10px;
  width: 90%;
}
.hr{
  border: 1px solid gainsboro;
  opacity: 0.2;
  width: 90%;
  margin: 0 auto;
}
text{
  margin-right: 30px;
  font-weight: bold;
}
.text{
  padding-left: 20px;
  padding-top: 20px;
}
button{
  margin-top: 100rpx;
}