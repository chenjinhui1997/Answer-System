}
.operate{
  display: flex;
  flex-direction: row;
}
.operate view{
  margin: 0 auto;
  margin-top: 40px;
  font-size: 14px;
  color: gray;
}
page {
  height: 100%;
  background: linear-gradient(#52dbf3,rgb(150, 243, 212),#FFFFFF);
}